<h1>食譜首頁</h1>

<%= link_to "新增食譜", new_recipe_path %>

<table>
    <thead>
      <tr>
        <td>名稱</td>
        <td>要價</td>
      </tr>
    </thead>
    <tbody>
      <%= recipe.each do |r|%>
      <tr>
        <td><%= r.title%></td>
        <td><%= r.money%></td>
      </tr>
      <% end %>
    </tbody>
</table>
